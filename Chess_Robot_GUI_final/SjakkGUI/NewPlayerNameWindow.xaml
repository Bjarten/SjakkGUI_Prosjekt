<Window x:Class="Chess_Robot.NewPlayerNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New player" Height="90" Width="240"
        KeyDown="Window_KeyDown">
    <Grid>
        <TextBox x:Name="tbNewPlayer" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="10,10,0,0"/>
        <Button x:Name="btnNewPlayer" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="135,10,0,0" Click="btnNewPlayer_Click"/>

    </Grid>
</Window>
